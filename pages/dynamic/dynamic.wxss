/* pages/dynamic/dynamic.wxss */
.container{padding-bottom:100rpx;}
.H-portrait{overflow:hidden;width:100%;height:240rpx;display:flex;flex-direction: row;}
.dyuserphoto{width:140rpx;height:140rpx;border: medium double rgba(255,255,255,0.5);}
.dyuserphoto image{width:100%;height:100%;}
.dyuserbg text{font-size:42rpx;color:#fff;padding-left:40rpx;}
.dyuserbg{width:100%;display: flex;flex-direction: row;position:relative;top:-190rpx;box-sizing:border-box;padding:0rpx 40rpx;line-height:152rpx;}
.widthbg{width:100%;}
.edit{width:100rpx;border-radius:10rpx;height:100rpx;position:absolute;right:0rpx;background:#fff;top:155rpx;overflow:hidden;text-align:center;vertical-align:middle;padding:20rpx 0rpx;}
.edit image{width:60rpx;height:60rpx;}
.dycontent{width:100%;display: flex;flex-direction: row;padding:20rpx 40rpx;box-sizing:border-box;}
.dyname{width:100%;display: flex;flex-direction: column;padding-left:40rpx;flex:1;}
.dyusername{font-size:28rpx;color:#007aff;}
.dywords{font-size:28rpx;color:#000;}
.dyusertu{width:100%;padding:40rpx 0rpx;}
.dyusertu image{padding-bottom:20rpx;width:30%;height:160rpx;padding-right:20rpx;float:left;box-sizing: border-box;}
.usertime{width:100%;display: flex;flex-direction: row;font-size:24rpx;}
.dycimg{width:80rpx;height:80rpx;}
.dyusertu image:nth-child(2n+1){padding-right:0rpx;box-sizing: border-box;}
.dyusertu image:nth-child(1){padding-right:20rpx;box-sizing: border-box;}


















