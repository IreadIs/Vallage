.firststa .three{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#aed370;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.pibao{width:33.33%;display: flex;flex-direction: column;text-align: center;}
.pibao .toady{font-size:32rpx;padding:20rpx 0rpx;}
.secondsta .one{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#ffb22d;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.secondsta .two{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#ea8482;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.secondsta .three{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#69d6e3;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
