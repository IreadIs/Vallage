/* pages/calendar/calendar.wxss */
.workbg{width:100%;height:176rpx;display:flex;flex-direction: column;background:url(https://qiyeplus.qiyeplus.com/data/upload/forsmall/images/bannerbg1.png) center center no-repeat}
.workbg .mine{padding:20rpx 40rpx;box-sizing:border-box;font-size:36rpx;color:#fff;}
.serch{width:100%;padding:40rpx 40rpx;box-sizing: border-box;}
.serchborder{width:100%;border:1px solid #ccc;border-radius:10rpx;font-size:28rpx;line-height:56rpx;height:56rpx;display: flex;flex-direction: row;}
.serchborder image{width:50rpx;height:50rpx;}
.serchborder input{text-align: left;flex:1;height:56rpx;line-height:56rpx;padding:0rpx 10rpx;}
.bodywork{width:100%;display: flex;flex-direction: column;}
.friendlist{width:100%;display: flex;flex-direction: column;padding:0rpx 40rpx;box-sizing: border-box;}
.goodfrship{width:100%;display: flex;flex-direction: row;line-height:126rpx;}
.goodfrship .gfshipimg{width:80rpx;height:80rpx;margin-right:30rpx;vertical-align:middle;margin-top:23rpx;border-radius:50%;}
.gfshipname{width:100%;display: flex;flex-direction: column;flex:1;line-height:40rpx;padding-top:20rpx;}
.resultwork{font-size:24rpx;color:#fff;background:#4cd964;height:40rpx;width:100rpx;line-height:40rpx;text-align:center;margin-top:43rpx;border-radius:20rpx;}
.borderwork{width:100%;display: flex;flex-direction: row;border-bottom:1px solid #ccc}
.Statistics{width:100%;display: flex;flex-direction: column;}
.firststa,.secondsta{box-sizing:border-box;width:100%;display: flex;flex-direction: row;padding:20rpx 40rpx;}
.firststa .one{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#3ecbc0;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.firststa .two{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#f0cb51;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.firststa .three{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#aed370;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.pibao{width:33.33%;display: flex;flex-direction: column;text-align: center;}
.pibao .toady{font-size:32rpx;padding:20rpx 0rpx;}
.secondsta .one{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#ffb22d;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.secondsta .two{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#ea8482;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}
.secondsta .three{font-size:28rpx;color:#fff;margin:0 auto;text-align:center;background:#69d6e3;width:120rpx;height:120rpx;line-height:120rpx;border-radius:50%;}







.swiper-tab{width: 100%; border-bottom: 2rpx solid #777777;text-align: center;line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;display: inline-block;width: 33.33%;color: #fff;  }  
.on{color: #fff; border-bottom: 5rpx solid #da7c0c;}  
.swiper-box{display: block; height: 100%; width: 100%; overflow: hidden; }  























