/* pages/Mycard/Mycard.wxss */
/*卡券过期字段：isexpire*/
.cardhead{overflow:hidden;width:100%;display: flex;flex-direction: row;background:url(https://qiyeplus.qiyeplus.com/data/upload/forsmall/images/bannerbg1.png) no-repeat;height: 200rpx; }
.cardhead .images1{width:140rpx;height:140rpx;border-radius:50%;margin:30rpx 40rpx;}
.cardtitle{padding-left:40rpx;display: flex;flex-direction: column;flex:1;}
.signname{display: flex;flex-direction: column;flex:1;padding:42rpx 0rpx 0rpx 20rpx;}
.signgold{margin-top:10px;width:200rpx;border: 2rpx solid #ffd706;height:40rpx;display: flex;flex-direction: row;border-radius:30rpx;overflow:hidden;line-height:36rpx;font-size:28rpx;color:#fff;}
.signgold .signimg1{width:40rpx;height:40rpx;}
.addsign{background:#fff;border-radius:10rpx;width:160rpx;display: flex;flex-direction: row;font-size:24rpx;color:rgba(255,45,0,0.7);height:70rpx;line-height:70rpx;margin-top:50rpx;padding-left:15rpx;}
.signimg3{width:40rpx;height:40rpx;padding-top:10rpx;}
.cardquan{width:100%;padding:40rpx;box-sizing: border-box;}
.cardlist{box-shadow:5px 5px 5px #ccc;border-radius:10rpx;position:relative;width:100%;background:#611eef;height:300rpx;overflow:hidden;display: flex;flex-direction: row;margin-bottom:20rpx;}
.bgc{position:absolute;top:100rpx;left:-60rpx;width:100%;height:300rpx;background-color: rgba(255, 255, 255, .15);transform:rotate(-30deg)}
.left{width:60%;display: flex;flex-direction: column;padding-left:20rpx;padding-top:46rpx;border-right:2rpx dashed #ccc;}
.right{width:40%;display: flex;flex-direction: column;text-align:center;}
.cardlist .bgop{left:0rpx;top:0rpx;overflow:hidden;width:100%;position: absolute;height:300rpx;background-color:#000000;z-index:90;opacity:0.4;}
.Expired{width:200rpx;position:absolute;transform:rotate(30deg);top:70rpx;left:270rpx;height:120rpx;z-index:91;}










































